<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <Fallback>
                <Inverter>
                    <Condition ID="Is_bumped" object="{back}"/>
                </Inverter>
                <Sequence>
                    <Action ID="Back" object="{back}" object="{turn}"/>
                    <Action ID="Turn" object="{turn}"/>
                </Sequence>
            </Fallback>
            <Action ID="Forward"/>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Back" object="{o1}"/>
        <Action ID="Forward"/>
        <Condition ID="Is_bumped" object="{o1}"/>
        <Action ID="Turn" object="{o1}"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

